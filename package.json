{
    "name": "vscode-svn",
    "displayName": "vscode-svn",
    "description": "",
    "version": "0.0.1",
    "publisher": "cnsimonchan",
    "engines": {
        "vscode": "^1.13.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "svn.update",
                "title": "Update",
                "category": "SVN"
            },
            {
                "command": "svn.commit",
                "title": "Commit",
                "category": "SVN"
            },
            {
                "command": "svn.stage",
                "title": "Stage",
                "category": "SVN"
            },
            {
                "command": "svn.unstage",
                "title": "Unstage",
                "category": "SVN"
            }
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "svn.commit",
                    "when": "scmProvider == svn && svnState == running"
                }
            ],
            "scm/resourceState/context": [
                {
                    "command": "svn.stage",
                    "when": "scmProvider == svn && svnState == running"
                },
                {
                    "command": "svn.unstage",
                    "when": "scmProvider == svn && svnState == running"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/fs-extra": "^3.0.3",
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.88",
        "mocha": "^2.3.3",
        "typescript": "^2.4.1",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "fs-extra": "^3.0.1",
        "svn": "file:svn"
    }
}
