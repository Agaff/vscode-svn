{
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "out",
        "plugins": [
            {
                "ignoreDefinitionFiles": true,
                "name": "tslint-language-service"
            }
        ],
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es2017",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src"
    ]
}
